<section class="container direct-wrap pt-5 pb-3" style="position: relative;">
    <h2>
        <span class="fw-normal">하나금융파인드의</span><br>
        제휴 보험상품을 소개드려요.
    </h2>
    <div class="swiper product-recommend-swiper">
        <div class="swiper-wrapper">
            <% for(var i=0;i<data_directRecommend.length;i++){ %>
            <div class="swiper-slide">
                <div class="proudct-item hvr-pop">
                    <a href="<%- data_directRecommend[i].url %>" target="_blank">
                        <div>
                            <span class="badge bg-secondary"><%- data_directRecommend[i].category_name %></span>
                            <i class="icon-outlink"></i>
                        </div>
                        <div>
                            <img class="logo" src="<%- data_directRecommend[i].logo_url %>" alt="<%- data_directRecommend[i].company_name %>" />
                        </div>
                        <div>
                            <span class="name"><%- data_directRecommend[i].name %></span>
                        </div>
                        <div>
                            <span class="desc"><%- data_directRecommend[i].description %></span>
                        </div>
                    </a>
                </div>
            </div>
            <% } %>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="row">
                <div class="col">
                    <div class="product-type">
                        <a href="products#all" class="hvr-rectangle-out">
                            <img src="/assets/img/icon/iconmonstr-layer-multiple-lined.svg" alt="전체상품">
                            <div class="desc">모든 제휴 보험상품</div>
                            <div class="type">전체 상품</div>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="product-type">
                        <a href="products#car" class="hvr-rectangle-out">
                            <img src="/assets/img/icon/iconmonstr-car-4.svg" alt="자동차/운전자보험">
                            <div class="desc">다이렉트로 저렴하게</div>
                            <div class="type">자동차/운전자보험</div>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="product-type">
                        <a href="products#health" class="hvr-rectangle-out">
                            <img src="/assets/img/icon/iconmonstr-medical-2.svg" alt="건상보험">
                            <div class="desc">질병 및 상해보장</div>
                            <div class="type">건강보험</div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="row">
                <div class="col">
                    <div class="product-type">
                        <a href="products#wholelife" class="hvr-rectangle-out">
                            <img src="/assets/img/icon/iconmonstr-umbrella-6.svg" alt="종신/정기보험">    
                            <div class="desc">중증질환·사망 보장</div>
                            <div class="type">종신/정기보험</div>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="product-type">
                        <a href="products#pension" class="hvr-rectangle-out">
                            <img src="/assets/img/icon/iconmonstr-coin-10.svg" alt="연금/저축보험">
                            <div class="desc">든든한 미래를 위한</div>
                            <div class="type">연금/저축보험</div>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="product-type">
                        <a href="products#travel" class="hvr-rectangle-out">
                            <img src="/assets/img/icon/iconmonstr-airport-2.svg" alt="여행보험">
                            <div class="desc">여행 필수품</div>
                            <div class="type">여행보험</div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="row">
                <div class="col">
                    <div class="product-type">
                        <a href="products#leisure" class="hvr-rectangle-out">
                            <img src="/assets/img/icon/iconmonstr-soccer-1.svg" alt="여행보험">
                            <div class="desc">레저활동 위험대비</div>
                            <div class="type">레저보험</div>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="product-type">
                        <a href="products#leisure" class="hvr-rectangle-out">
                            <img src="/assets/img/icon/iconmonstr-cat-6.svg" alt="여행보험">
                            <div class="desc">반려동물 건강 지킴이</div>
                            <div class="type">펫보험</div>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="product-type">
                        <a href="products#phone" class="hvr-rectangle-out">
                            <img src="/assets/img/icon/iconmonstr-smartphone-12.svg" alt="여행보험">
                            <div class="desc">분실/파손 걱정 끝</div>
                            <div class="type">휴대폰보험</div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="block btn-proudcts-direct">
        <div>
            <button type="button" class="btn btn-primary" onclick="javascript:location.href='/products'">전체 상품 보기</button>
        </div>
    </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function(){
        var swiper_product = new Swiper(".product-recommend-swiper", {
            slidesPerView: 1,
            centeredSlides: false,
            slidesPerGroupSkip: 1,
            grabCursor: true,
            loop: true,
            spaceBetween: 30,
            keyboard: {
                enabled: true,
            },
            breakpoints: {
                769: {
                slidesPerView: 2,
                slidesPerGroup: 1,
                },
                1401:{
                    slidesPerView: 3,
                    slidesPerGroup: 1,
                }
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
        });
    });
        
</script>