<div id="toast" hidden="true"></div>

<script >
    function toast(str) {
      let removeToast;
      const toast = document.getElementById("toast");

      toast.classList.contains("reveal") ?
          (clearTimeout(removeToast), removeToast = setTimeout(function () {
              document.getElementById("toast").classList.remove("reveal")
          }, 2000)) :
          removeToast = setTimeout(function () {
              document.getElementById("toast").classList.remove("reveal")
          }, 2000)
          toast.classList.add("reveal"), toast.innerText = str, toast.removeAttribute("hidden")
    }
    </script>

<style>
    #toast {
      position: fixed;
      bottom: 10%;
      /* top: 40%; */
      left: 50%;
      padding: 15px 20px;
      transform: translate(-50%, 10px);
      border-radius: 20px;
      /* border-style: solid; */
      /* border-color: #565973; */
      overflow: hidden;
      /* font-size: .8rem; */
      font-size: 0.85rem;
      opacity: 0;
      visibility: hidden;
      transition: opacity .5s, visibility .5s, transform .5s;
      /* background: rgba(255, 255, 255, 0.75); */
      background: rgba(86, 89, 115, 0.75);
      /* color: #000; */
      color: #fff;
      font-weight: bold;
      z-index: 10000;
  }

  #toast.reveal {
      opacity: 1;
      visibility: visible;
      transform: translate(-50%, 0)
  }
  </style>